# Backend API URL (standalone backend server)
NEXT_PUBLIC_API_URL="http://localhost:4000"

# App URL
NEXT_PUBLIC_APP_URL="https://app.promptflow.run"

# n8n Webhook URLs (full URLs including path)
N8N_WEBHOOK_SINGLE="https://n8n-1.alanbouo.com/webhook/process-single_YOUR_WEBHOOK_ID"
N8N_WEBHOOK_BATCH="https://n8n-1.alanbouo.com/webhook/process-batch_YOUR_WEBHOOK_ID"

# n8n Webhook Authorization Header (Bearer token)
N8N_WEBHOOK_AUTH_TOKEN="your-auth-token-here"

# LLM API Keys (direct API calls)
OPENAI_API_KEY="sk-..."
ANTHROPIC_API_KEY="sk-ant-..."
XAI_API_KEY="xai-..."

# NextAuth
NEXTAUTH_SECRET="your-nextauth-secret"
NEXTAUTH_URL="https://promptflow.alanbouo.com"

# Resend (Email)
RESEND_API_KEY="re_..."
EMAIL_FROM="PromptFlow <noreply@yourdomain.com>"
